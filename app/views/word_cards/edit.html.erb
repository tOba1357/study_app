<h2>単語作成</h2>
<%= form_for @word_card do |f| %>
  <div class="form-group">
    <%= f.label :word %>
    <%= f.text_field :word, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit '更新', class: 'btn btn-primary' %>
  </div>
<% end %>